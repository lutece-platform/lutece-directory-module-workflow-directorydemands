<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <!-- IdentityService -->
    <bean id="workflow-directorydemands.identitystore.httpTransport" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://localhost:8080/identitystore/rest/identitystore</value>
        </property>
    </bean>
    <bean id="workflow-directorydemands.identitystore.service" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="workflow-directorydemands.identitystore.httpTransport"/>
    </bean>

    
    <!-- Transaction Manager -->
    <bean id="workflow-directorydemands.transactionManager" class="fr.paris.lutece.portal.service.database.DAOUtilTransactionManager"
        p:pluginName="workflow-directorydemands" />

    <!-- DAO -->
    <bean id="workflow-directorydemands.recordAssignmentDAO"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.RecordAssignmentDAO" />

    <!-- Service -->
     <bean id="workflow-directorydemands.unitCodeService"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.LabelUnitCodeService" />

    
    <!-- Task Assign Record To Unit -->
    <bean id="workflow-directorydemands.taskAssignRecordToUnit"
            class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.TaskAssignRecordToUnit"
            scope="prototype" />
    <bean id="workflow-directorydemands.taskTypeAssignRecordToUnit"
            class="fr.paris.lutece.plugins.workflowcore.business.task.TaskType"
            p:key="taskAssignRecordToUnit" 
            p:titleI18nKey="module.workflow.directorydemands.task_assign_record_to_unit.title"
            p:beanName="workflow-directorydemands.taskAssignRecordToUnit"
            p:taskForAutomaticAction="true"
            p:configRequired="false"
            p:formTaskRequired="false"   />
</beans>
