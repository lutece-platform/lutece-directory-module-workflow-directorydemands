<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <!-- IdentityService -->
    <bean id="workflow-directorydemands.identitystore.httpTransport" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://localhost:8080/identitystore/rest/identitystore</value>
        </property>
    </bean>
    <bean id="workflow-directorydemands.identitystore.service" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="workflow-directorydemands.identitystore.httpTransport"/>
    </bean>

    
    <!-- Transaction Manager -->
    <bean id="workflow-directorydemands.transactionManager" class="fr.paris.lutece.portal.service.database.DAOUtilTransactionManager"
        p:pluginName="workflow-directorydemands" />

    <!-- DAO -->
    <bean id="workflow-directorydemands.recordAssignmentDAO"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.RecordAssignmentDAO" />
    <bean id="workflow-directorydemands.unitCodeDAO"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.unit.UnitCodeDAO" />
    <bean id="workflow-directorydemands.taskInformationDAO"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.task.information.TaskInformationDAO" />
    <bean id="workflow-directorydemands.taskAssignRecordToUnitConfigDAO"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.task.config.TaskAssignRecordToUnitConfigDAO" />
        
    <!-- Unit Code Attribute -->
    <bean id="workflow-directorydemands.unitCodeService" class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.unit.UnitCodeAttributeService" />
    <bean id="workflow-directorydemands.unitCodeAttributeComponent" class="fr.paris.lutece.plugins.workflow.modules.directorydemands.web.unit.UnitCodeAttributeComponent" />
    <bean id="workflow-directorydemands.unitCodeAttributeService" class="fr.paris.lutece.plugins.workflow.modules.directorydemands.business.unit.UnitCodeAttribute" />	

    <!-- Service -->
    <!--<bean id="workflow-directorydemands.unitCodeService" class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.LabelUnitCodeService" /> -->
    <bean id="workflow-directorydemands.taskAssignRecordToUnitConfigService"
        class="fr.paris.lutece.plugins.workflowcore.service.config.TaskConfigService"
        p:taskConfigDAO-ref="workflow-directorydemands.taskAssignRecordToUnitConfigDAO" />

    <!-- Unit Selection -->
    <bean id="workflow-directorydemands.unitSelection.fromAll"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.selection.impl.UnitSelectionFromAll" />
    <bean id="workflow-directorydemands.unitSelection.fromIdentityStore"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.selection.impl.UnitSelectionFromIdentityStore" />
    <bean id="workflow-directorydemands.unitSelection.parent"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.selection.impl.UnitSelectionParent" />
    <bean id="workflow-directorydemands.unitSelection.assignor"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.selection.impl.UnitSelectionAssignor" />

    
    <!-- Task Assign Record To Unit - Manual -->
    <bean id="workflow-directorydemands.taskAssignRecordToUnitManual"
            class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.TaskAssignRecordToUnitManual"
            scope="prototype" />
    <bean id="workflow-directorydemands.taskTypeAssignRecordToUnitManual"
            class="fr.paris.lutece.plugins.workflowcore.business.task.TaskType"
            p:key="taskAssignRecordToUnitManual"
            p:titleI18nKey="module.workflow.directorydemands.task_assign_record_to_unit_manual.title"
            p:beanName="workflow-directorydemands.taskAssignRecordToUnitManual"
            p:taskForAutomaticAction="false"
            p:configRequired="true"
            p:formTaskRequired="true"   />
    <bean id="workflow-directorydemands.assignRecordToUnitManualTaskComponent"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.web.task.AssignRecordToUnitManualTaskComponent"
        p:taskType-ref="workflow-directorydemands.taskTypeAssignRecordToUnitManual"
        p:taskConfigService-ref="workflow-directorydemands.taskAssignRecordToUnitConfigService" />

    <!-- Task Assign Record To Unit - automatic -->
    <bean id="workflow-directorydemands.taskAssignRecordToUnitAutomatic"
            class="fr.paris.lutece.plugins.workflow.modules.directorydemands.service.task.TaskAssignRecordToUnitAutomatic"
            scope="prototype" />
    <bean id="workflow-directorydemands.taskTypeAssignRecordToUnitAutomatic"
            class="fr.paris.lutece.plugins.workflowcore.business.task.TaskType"
            p:key="taskAssignRecordToUnitAutomatic"
            p:titleI18nKey="module.workflow.directorydemands.task_assign_record_to_unit_automatic.title"
            p:beanName="workflow-directorydemands.taskAssignRecordToUnitAutomatic"
            p:taskForAutomaticAction="true"
            p:configRequired="true"
            p:formTaskRequired="false"   />
    <bean id="workflow-directorydemands.assignRecordToUnitAutomaticTaskComponent"
        class="fr.paris.lutece.plugins.workflow.modules.directorydemands.web.task.AssignRecordToUnitAutomaticTaskComponent"
        p:taskType-ref="workflow-directorydemands.taskTypeAssignRecordToUnitAutomatic"
        p:taskConfigService-ref="workflow-directorydemands.taskAssignRecordToUnitConfigService" />
</beans>
